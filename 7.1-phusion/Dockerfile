FROM		phusion/baseimage:0.9.22
MAINTAINER	David Hiendl <david.hiendl@dhswt.de>

ENV		WEB_HOME	/www
ENV		WEB_ROOT	/www/htdocs

EXPOSE	80
VOLUME	/www/htdocs
WORKDIR	/www
CMD		/sbin/my_init

# install packaged dependencies
RUN		DEBIAN_FRONTEND=noninteractive \

&&		add-apt-repository ppa:ondrej/php \
&&		apt-get update \
&&		apt-get install -y \
			nginx \
			gettext-base \
			wget \
			php7.1-fpm \
			php7.1-opcache \
			
# clean up cache
&&		apt-get clean \
&&		rm -rf \
			/var/lib/apt/lists/* \
			/tmp/* \
			/var/tmp/* \

# create clean web root dir
&&		mkdir -p /www/htdocs \
&&		chown www-data:www-data -R /www \

# remove default nginx site
&&		rm /etc/nginx/sites-enabled/* \

# configure php-fpm
&&		cd /etc/php/7.1/fpm \
&&		mv php-fpm.conf php-fpm.conf.bak \

# keep only active directives
&&		mv pool.d/www.conf pool.d/www.conf.bak \
&&		cat pool.d/www.conf.bak \
			| grep -v "^;" \
			| grep -v "^$" \
			> pool.d/50-www.conf

# install services, scripts, config
ADD		services	/etc/service
ADD		init.d		/etc/my_init.d
ADD		php-fpm		/etc/php/7.1/fpm/

# update permissions
RUN		chmod 555 \
		/etc/my_init.d/* \
		/etc/service/nginx/* \
		/etc/service/php-fpm/*
